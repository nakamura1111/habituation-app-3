<% breadcrumb :habit_show, @habit %>
<div class="nes-container with-title main">
  <h2 class="title"><%= "鍛錬メニュー詳細表示" %></h2>
  <%# 目標詳細表示の説明 %>
  <div class="instruction">
    <%= render partial: "shared/ash_talk", locals: {talk_content: "ここでは鍛錬の詳細を見ることができるよ！"} %>
  </div>
  <%# /目標詳細表示の説明 %>
  <%# 習慣詳細 %>
  <div class="nes-container with-title habit-box">
    <h3 class='title habit-name'><%= @habit.name %></h3>
    <%# 習慣達成率 %>
    <div class="habit-achieved-ratio-box">
      <div class="achieved-ratio-string">
        <%= "達成率：" %>
      </div>
      <% if @achieved_ratio >= 4.0/7*100 %>
      <progress class="nes-progress is-success achieved-ratio-bar" id="achieved-ratio-bar" value=<%= @achieved_ratio %> max="100"></progress>
      <% elsif @achieved_ratio >= 1.0/7*100 %>
      <progress class="nes-progress is-warning achieved-ratio-bar" id="achieved-ratio-bar" value=<%= @achieved_ratio %> max="100"></progress>
      <% else %>
      <progress class="nes-progress is-error achieved-ratio-bar" id="achieved-ratio-bar" value=<%= @achieved_ratio %> max="100"></progress>
      <% end %>
    </div>
    <%# 難易度、達成状況 %>
    <%= render partial: "shared/habit_desc", locals: {habit: @habit, achieved_status: @achieved_status} %>
    <%# 習慣の内容 %>
    <div class="nes-container with-title habit-content-box">
      <h3 class='title'><%= "鍛錬内容" %></h3>
      <%= @habit.content %>
    </div>
  </div>
  <%# /習慣詳細 %>

  <%# リンク %>
  <div class="nes-container links">
    <div class="message-list">
      <i class="nes-ash"></i>
      <div class="nes-balloon from-left">
        <%= link_to "目標の詳細、鍛錬メニューを見る？", target_path(@target) %>
      </div>
    </div>
  </div>
  <%# /リンク %>
</div>
